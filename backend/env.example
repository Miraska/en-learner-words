PORT=5000

# PostgreSQL connection string used by Prisma
DATABASE_URL="postgresql://USER:PASSWORD@localhost:5432/wordcraft?schema=public"

# JWT secret for signing auth tokens
JWT_SECRET="change_me"

# OpenAI configuration for hint generation (LLM)
# OPENAI_API_KEY is required to enable LLM-generated hints. If empty, a fallback hint is used.
OPENAI_API_KEY=""
OPENAI_BASE_URL="https://api.openai.com/v1"
OPENAI_MODEL="gpt-4o-mini"

# Global rate limiting (IP-based)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Hints-specific rate limiting (user-based)
HINT_RATE_LIMIT_WINDOW_MS=86400000
HINT_RATE_LIMIT_FREE_MAX=399999
# 0 or empty means unlimited (Infinity)
HINT_RATE_LIMIT_PREMIUM_MAX=0

# Cron jobs
HINT_USAGE_RETENTION_DAYS=30

# Admin panel credentials
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="super_secret_admin_password_2024"


